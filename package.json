{
  "name": "psp-detector",
  "version": "2.2025.927.339",
  "description": "Chrome extension to detect Payment Service Providers on web pages",
  "private": true,
  "scripts": {
    "build": "node build.js",
    "build:debug": "DEBUG=true NO_SOURCEMAP=true node build.js",
    "test": "npm run build && jest",
    "test:integration": "npx playwright install chromium && playwright test",
    "test:watch": "jest --watch",
    "lint": "gts lint",
    "lint:fix": "gts fix",
    "lint:html": "hint public/popup.html docs/privacy-policy.html",
    "lint:manifest": "hint assets/manifest.json",
    "lint:web": "npm run lint:html && npm run lint:manifest",
    "fix": "gts fix",
    "check": "gts check",
    "clean": "gts clean",
    "typecheck": "tsc --noEmit",
    "dev": "npm run build:debug",
    "ci": "npm run lint && npm run lint:web && npm run typecheck && npm run test",
    "validate": "npm run fix && npm run typecheck && npm run build && npm run test && npm run lint:web",
    "precommit": "npm run validate"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.3.0",
    "@hint/hint-meta-theme-color": "^4.0.23",
    "@playwright/test": "^1.55.0",
    "@types/chrome": "^0.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "gts": "^6.0.2",
    "hint": "^7.1.13",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jiti": "^2.6.0",
    "sharp": "^0.34.4",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "optionalDependencies": {
    "@playwright/test": "^1.55.1"
  },
  "overrides": {
    "npmlog": "^7.0.1",
    "are-we-there-yet": "^4.0.2",
    "gauge": "^5.0.2",
    "glob": "^11.0.3",
    "got": "^14.4.7",
    "tar-fs": "^3.1.0",
    "tmp": "^0.2.5",
    "typescript": "^5.9.2",
    "ws": "^8.18.3"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "fs-extra": "^11.3.2"
  }
}
