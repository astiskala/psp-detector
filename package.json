{
  "name": "psp-detector",
  "version": "2.2025.825.2345",
  "description": "Chrome extension to detect Payment Service Providers on web pages",
  "private": true,
  "scripts": {
    "build": "node build.js",
    "build:debug": "DEBUG=true NO_SOURCEMAP=true node build.js",
    "test": "npm run build && jest",
    "test:integration": "npx playwright install chromium && playwright test",
    "test:watch": "jest --watch",
    "lint": "gts lint",
    "lint:fix": "gts fix",
    "lint:html": "hint public/popup.html docs/privacy-policy.html",
    "lint:manifest": "hint assets/manifest.json",
    "lint:web": "npm run lint:html && npm run lint:manifest",
    "fix": "gts fix",
    "check": "gts check",
    "clean": "gts clean",
    "typecheck": "tsc --noEmit",
    "dev": "npm run build:debug",
    "ci": "npm run lint && npm run lint:web && npm run typecheck && npm run test",
    "validate": "npm run fix && npm run typecheck && npm run build && npm run test && npm run lint:web",
    "precommit": "npm run validate"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "@hint/hint-meta-theme-color": "^4.0.23",
    "@playwright/test": "^1.54.2",
    "@types/chrome": "^0.1.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "gts": "^6.0.2",
    "hint": "^7.1.13",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jiti": "^2.5.1",
    "sharp": "^0.34.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "optionalDependencies": {
    "@playwright/test": "^1.48.0"
  },
  "overrides": {
    "glob": "^10.4.5",
    "got": ">=11.8.5",
    "tar-fs": ">=2.1.3",
    "tmp": ">=0.2.4",
    "typescript": "^5.9.2",
    "ws": ">=8.17.1"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "fs-extra": "^11.3.1"
  }
}
