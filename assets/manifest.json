{
  "manifest_version": 3,
  "name": "PSP Detector",
  "version": "",
  "description": "Chrome extension to detect Payment Service Providers on web pages",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/default_16.png",
      "48": "images/default_48.png",
      "128": "images/default_128.png"
    }
  },
  "icons": {
    "16": "images/default_16.png",
    "48": "images/default_48.png",
    "128": "images/default_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*", "psp-config.json", "exempt-domains.json"],
      "matches": ["https://*/*"]
    }
  ]
}
